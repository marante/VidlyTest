@model IEnumerable<VidlyUdemyTest.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<p>
    @Html.ActionLink("New Movie", "New", "Movies", null, new { @class = "btn btn-primary"})
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Movies</th>
            <th>Genres</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movies in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(movies.Name, "Edit", "Movies", new { id = movies.Id }, null)
                </td>
                <td>
                    @movies.Genre.Name
                </td>
            </tr>
        }
    </tbody>
</table>
